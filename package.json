{
  "private": true,
  "name": "prettier-browser-extension",
  "version": "0.0.5",
  "repository": "https://github.com/prettier/prettier-browser-extension.git",
  "license": "MIT",
  "webExt": {
    "sourceDir": "extension/firefox/"
  },
  "scripts": {
    "build:chrome": "webpack --mode=production --env platform=chrome",
    "build:firefox": "webpack --mode=production --env platform=firefox",
    "build": "yarn build:chrome && yarn build:firefox",
    "dev:chrome": "webpack --mode=development --watch --env platform=chrome",
    "dev:firefox": "webpack --mode=development --watch --env platform=firefox",
    "launch:firefox": "web-ext run",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test-only": "jest --passWithNoTests",
    "test": "yarn format:check && yarn lint && yarn test-only",
    "prepare": "husky install"
  },
  "dependencies": {
    "classnames": "2.3.1",
    "prettier": "2.2.1",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "7.17.2"
  },
  "devDependencies": {
    "@babel/core": "7.15.8",
    "@babel/plugin-transform-modules-commonjs": "7.15.4",
    "@babel/preset-react": "7.14.5",
    "babel-loader": "8.2.2",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "copy-webpack-plugin": "9.0.1",
    "css-loader": "6.4.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "filemanager-webpack-plugin": "6.1.7",
    "html-webpack-plugin": "5.3.2",
    "husky": "7.0.2",
    "jest": "27.2.5",
    "lint-staged": "11.2.3",
    "merge-json-webpack-plugin": "6.0.0",
    "react-devtools": "4.19.2",
    "sass": "1.42.1",
    "sass-loader": "12.2.0",
    "style-loader": "3.3.0",
    "web-ext": "6.5.0",
    "webextension-polyfill": "0.8.0",
    "webpack": "5.58.1",
    "webpack-cli": "4.9.0"
  }
}
