{
  "private": true,
  "name": "prettier-chrome-extension",
  "version": "0.0.5",
  "repository": "https://github.com/prettier/prettier-chrome-extension.git",
  "license": "MIT",
  "webExt": {
    "sourceDir": "extension/firefox/"
  },
  "scripts": {
    "build:chrome": "webpack --mode=production --env.platform=chrome && yarn zip",
    "build:firefox": "webpack --mode=production --env.platform=firefox && web-ext build -o",
    "build": "yarn build:chrome && yarn build:firefox",
    "fix": "yarn fix:js && yarn fix:other",
    "fix:other": "yarn prettier",
    "fix:js": "yarn test:js --fix",
    "prettier": "prettier . --write",
    "start:chrome": "webpack --mode=development --env.platform=chrome",
    "start:firefox": "webpack --mode=development --env.platform=firefox",
    "launch:firefox": "web-ext run",
    "test": "yarn test:other && yarn test:js && jest --passWithNoTests",
    "test:other": "prettier . --check",
    "test:js": "eslint --ignore-path .gitignore --ignore-path .prettierignore \"**/*.js\"",
    "zip": "jszip-cli add -i .DS_Store -o chrome.zip -f extension/*"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "prettier": "2.0.5",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-hook-form": "5.7.2"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/plugin-transform-modules-commonjs": "7.10.1",
    "@babel/preset-react": "7.10.1",
    "@ffflorian/jszip-cli": "3.1.0",
    "@svgr/webpack": "5.4.0",
    "babel-loader": "8.1.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.0.2",
    "css-loader": "3.5.3",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.4",
    "html-webpack-plugin": "4.3.0",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lint-staged": "10.2.9",
    "react-devtools": "4.7.0",
    "sass": "1.26.8",
    "sass-loader": "8.0.2",
    "style-loader": "1.2.1",
    "web-ext": "4.2.0",
    "webextension-polyfill": "0.6.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --ignore-path .gitignore --ignore-path .prettierignore --fix"
    ],
    "*.{md,css,scss,html,json,yml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
